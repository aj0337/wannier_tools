&PARAMETERS
number_layers = 1    ! Two layers for TBG
twisted_index_m= 0   ! twisted index m, theta= acos((3d0*m*m + 3d0*m + 0.5d0)/(3d0*m*m + 3d0*m + 1d0));
twisted_angle_array_input = 0   ! twisted angle array, unit is theta; Number_of_layers numbers
stacking_sequences_input = "A" ! AB stacking sequences, only three values "A", "B", "C"; Number_of_layers numbers
use_poscar = T    ! use POSCAR or not,  T: we will use POSCAR, F: will generate POSCAR
hr_generate = T    ! use POSCAR or not,  T: we will generate hr.dat
gen_sparse_hr = T   ! use POSCAR or not,  T: we will generate hr.dat in sparse format
hr_cutoff=0.00100  ! set HmnR=0 if HmnR<hr_cutoff
vpppi=-2.81       !  pi bond of p orbital, unit eV
iR_cut = 3   ! R is in [-iR_cut, -iR_cut+1, ..., iR_cut]
onsite=-0.00d0
first_neighbor_hopping = -2.7d0
second_neighbor_hopping = 0.0d0
third_neighbor_hopping = 0.0d0
potential_type = "sine"
potential_height_U0 = 0.0d0
/
